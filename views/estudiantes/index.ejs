    <br>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo">NUEVO</button>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Datos del Estudiante</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/crud_e" method="post">
                    <input type="text" class="form-control" id="txt_id" name="txt_id" placeholder="0">
                    <input type="text" class="form-control" id="txt_carne" name="txt_carne" placeholder="carne">
                    <input type="text" class="form-control" id="txt_nombres" name="txt_nombres" placeholder="Nombres">
                    <input type="text" class="form-control" id="txt_apellidos" name="txt_apellidos" placeholder="Apellidos">
                    <input type="text" class="form-control" id="txt_direccion" name="txt_direccion" placeholder="Direccion">
                    <input type="text" class="form-control" id="txt_telefono" name="txt_telefono" placeholder="Telefono">
                    <input type="text" class="form-control" id="txt_correo_electronico" name="txt_correo_electronico" placeholder="Correo Electronico">
                    <input type="text" class="form-control" id="txt_id_tipo_sangre" name="txt_id_tipo_sangre" placeholder="Elija">
                    <input type="date" class="form-control" id="txt_fn" name="txt_fn" placeholder="yyyy-MM-dd">
                   <button type="submit" id="btn_crear" name="btn_crear" class="btn btn-info" value="crear">Agregar</button>
                   <button type="submit" id="btn_actualizar" name="btn_actualizar" class="btn btn-warning" value="actualizar">Modificar</button>
                   <button type="submit" id="btn_borrar" name="btn_borrar" class="btn btn-danger" value="borrar">Eliminar</button>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger">cerrar</button>
            </div>
          </div>
        </div>
      </div>
      
    <table class=table table-bordered>
        <thead>
            <tr>
                <th>id</th>
                <th>Carne</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th>Sangre</th>
                <th>Nacimiento</th>
            </tr>
        </thead>
        <tbody>
            <% resultado.forEach ((estudiante)=> { %>
            <tr>
                <td><%= estudiante.id_estudiantes %></td>
                <td><%= estudiante.carne %></td>
                <td><%= estudiante.nombres %></td>
                <td><%= estudiante.apellidos %></td>
                <td><%= estudiante.direccion %></td>
                <td><%= estudiante.telefono %></td>
                <td><%= estudiante.correo_electronico %></td>
                <td><%= estudiante.id_tipo_sangre %></td>
                <td><%= estudiante.fecha_nacimiento %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <script
                    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
                    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
